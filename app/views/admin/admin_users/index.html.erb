<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for @admin_user, :url => admin_admin_users_path, :html => {:class => "form-inline", :role => "form"} do |f| %>
          <div class="form-group col-lg-4">
            <%= label_tag :email, "Email Address", :class => "sr-only" %>
            <%= text_field_tag :email, "", :class => "form-control", :placeholder => "Enter email" %>
          </div>
          <%= f.submit "Add as Admin", :class => "btn btn-default" %>
         <% end %>
      </div>
    </div>
  </div>
</div>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>#</th>
    <th>Email</th>
    <th>Name</th>
    <th style="width: 160px;">Options</th>
  </tr>
  </thead>
  <tbody>
  <% @admin_users.each.with_index do |admin_user, i| %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= admin_user.user.email %></td>
      <td><%= admin_user.user.employee.name %></td>
      <td>
        <%= link_to admin_admin_user_path(admin_user), :class => "btn btn-danger btn-xs", :method => :delete, :confirm => "Are you sure?" do %>
          <span class="glyphicon glyphicon-trash"></span>
          Delete
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>