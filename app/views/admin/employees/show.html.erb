<div class="page-header">
  <h4><%= "#{@employee.name}'s Profile"%></h4>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-2">
        <div class="employee_picture">
          <%= image_tag @employee.picture.url(:medium), :class => "img-thumbnail" %>
        </div>
      </div>
      <div class="col-lg-8">
        <h3 style="margin-top: 5px;">
          <%= @employee.full_name %>
          <small><%= @employee.designation.capitalize %></small>
        </h3>
        <table class="table" style="width: 70%">
          <tr>
            <td>Code</td>
            <td><%= @employee.display_code %></td>
          </tr>
          <tr>
            <td>Manager</td>
            <td>--</td>
          </tr>
          <tr>
            <td>Contact Mobile</td>
            <td><%= @employee.contact_mobile %></td>
          </tr>
          <tr>
            <td>Join Date</td>
            <td><%= @employee.join_date.strftime("%b %Y, %d") %></td>
          </tr>
          <tr>
            <td>Birth Date</td>
            <td><%= @employee.birth_date.strftime("%b %Y, %d") %></td>
          </tr>
          <tr>
            <td colspan="2">
              <%= link_to 'Edit', edit_admin_employee_path(@employee), :class => "btn btn-primary btn-xs" %>
              &nbsp;&nbsp;&nbsp;
              <%= link_to 'Back', admin_employees_path %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

